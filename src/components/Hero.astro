
---
const name = "Appogel Cagoco";
const title = "AI Automation Specialist and Python Developer";
const tagline =
  "I build AI workflow automations, scalable data pipelines, and clean infrastructure â€” reducing manual workloads and turning complex systems into simple, maintainable solutions.";
---

<section class="min-h-screen flex items-center relative overflow-hidden">
  <!-- Background grid -->
  <div
    class="absolute inset-0 bg-[linear-gradient(rgba(148,163,184,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(148,163,184,0.03)_1px,transparent_1px)] bg-[size:72px_72px]"
  ></div>

  <!-- Gradient orbs -->
  <div class="absolute top-1/4 right-0 w-[500px] h-[500px] bg-accent-500/[0.06] rounded-full blur-[120px]"></div>
  <div class="absolute bottom-0 left-1/4 w-[300px] h-[300px] bg-accent-600/[0.04] rounded-full blur-[100px]"></div>

  <div class="max-w-6xl mx-auto px-6 py-24 md:py-32 relative">
    <div class="grid md:grid-cols-2 gap-12 md:gap-16 items-center">
      <!-- Left: Content -->
      <div class="opacity-0 animate-slide-up">
        <p class="text-accent-400 font-mono text-sm mb-6 flex items-center gap-3">
          <span class="w-8 h-px bg-accent-400/60"></span>
          Hi, my name is
        </p>
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-white mb-4 tracking-tight leading-[1.1]">
          {name}<span class="text-accent-400">.</span>
        </h1>
        <h2 class="text-xl sm:text-2xl md:text-3xl font-semibold text-surface-400 mb-8">
          {title}
        </h2>
        <p class="text-surface-400 text-base sm:text-lg leading-relaxed mb-10 max-w-lg">
          {tagline}
        </p>
        <div class="flex flex-wrap gap-4">
          <a
            href="#projects"
            class="group inline-flex items-center gap-2.5 px-6 py-3 bg-accent-500 hover:bg-accent-600 text-white font-medium rounded-xl transition-all duration-200 text-sm shadow-lg shadow-accent-500/25"
          >
            View my work
            <svg class="w-4 h-4 transition-transform duration-200 group-hover:translate-y-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
            </svg>
          </a>
          <a
            href="#contact"
            class="inline-flex items-center px-6 py-3 border border-surface-600 hover:border-accent-500 text-surface-300 hover:text-white rounded-xl transition-all duration-200 text-sm"
          >
            Get in touch
          </a>
        </div>
      </div>

      <!-- Right: Visual element -->
      <div class="hidden md:flex justify-center items-center opacity-0 animate-slide-up-delay">
        <div class="relative w-72 h-72">
          <!-- Outer ring -->
          <div class="absolute inset-0 rounded-full border border-surface-700/40"></div>
          <!-- Inner ring -->
          <div class="absolute inset-8 rounded-full border border-surface-700/30"></div>
          <!-- Center glow -->
          <div class="absolute inset-16 rounded-full bg-gradient-to-br from-accent-500/15 to-accent-600/5 border border-accent-500/20"></div>
          <!-- Floating dots -->
          <div class="absolute top-6 right-14 w-2 h-2 rounded-full bg-accent-400/70"></div>
          <div class="absolute bottom-10 left-6 w-1.5 h-1.5 rounded-full bg-accent-400/50"></div>
          <!-- Center icon -->
          <div class="absolute inset-0 flex items-center justify-center">
            <span class="font-mono text-4xl font-bold text-accent-400/30">&lt;/&gt;</span>
          </div>
          <!-- Orbiting labels -->
          <div class="absolute -top-3 left-1/2 -translate-x-1/2">
            <span class="px-3 py-1 text-[10px] font-mono text-surface-400 bg-surface-900 rounded-full border border-surface-700/50">automation</span>
          </div>
          <div class="absolute -bottom-3 left-1/2 -translate-x-1/2">
            <span class="px-3 py-1 text-[10px] font-mono text-surface-400 bg-surface-900 rounded-full border border-surface-700/50">AI</span>
          </div>
          <div class="absolute top-1/2 -left-6 -translate-y-1/2">
            <span class="px-3 py-1 text-[10px] font-mono text-surface-400 bg-surface-900 rounded-full border border-surface-700/50">workflow</span>
          </div>
          <div class="absolute top-1/2 -right-3 -translate-y-1/2">
            <span class="px-3 py-1 text-[10px] font-mono text-surface-400 bg-surface-900 rounded-full border border-surface-700/50">data</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2">
    <div class="w-px h-8 bg-gradient-to-b from-transparent to-surface-600"></div>
  </div>
</section>
