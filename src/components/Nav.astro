---
const links = [
  { label: "About", href: "#about" },
  { label: "Skills", href: "#skills" },
  { label: "Projects", href: "#projects" },
  { label: "Experience", href: "#experience" },
  { label: "Contact", href: "#contact" },
];
---

<nav
  id="navbar"
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-500"
>
  <div class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
    <a
      href="#"
      class="text-white font-mono font-bold text-base hover:text-accent-400 transition-colors duration-200"
    >
      appogel<span class="text-accent-400">.</span>dev
    </a>

    <!-- Desktop links -->
    <div class="hidden md:flex items-center gap-1">
      {
        links.map((link) => (
          <a
            href={link.href}
            class="text-sm text-surface-400 hover:text-white px-3 py-2 rounded-lg hover:bg-surface-800/50 transition-all duration-200"
          >
            {link.label}
          </a>
        ))
      }
    </div>

    <!-- Mobile toggle -->
    <button
      id="mobile-toggle"
      class="md:hidden text-surface-400 hover:text-white transition-colors p-2 -mr-2"
      aria-label="Toggle menu"
    >
      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M3.75 9h16.5m-16.5 6.75h16.5"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile menu -->
  <div
    id="mobile-menu"
    class="hidden md:hidden bg-surface-950/98 backdrop-blur-xl border-t border-surface-800/50"
  >
    <div class="px-6 py-6 flex flex-col gap-1">
      {
        links.map((link) => (
          <a
            href={link.href}
            class="mobile-link text-sm text-surface-400 hover:text-white py-3 px-4 rounded-xl hover:bg-surface-800/50 transition-all duration-200"
          >
            {link.label}
          </a>
        ))
      }
    </div>
  </div>
</nav>

<script>
  const navbar = document.getElementById("navbar");
  window.addEventListener("scroll", () => {
    if (window.scrollY > 50) {
      navbar?.classList.add("bg-surface-950/80", "backdrop-blur-xl", "shadow-lg", "shadow-black/10");
    } else {
      navbar?.classList.remove("bg-surface-950/80", "backdrop-blur-xl", "shadow-lg", "shadow-black/10");
    }
  });

  const toggle = document.getElementById("mobile-toggle");
  const menu = document.getElementById("mobile-menu");
  toggle?.addEventListener("click", () => menu?.classList.toggle("hidden"));

  document.querySelectorAll(".mobile-link").forEach((link) => {
    link.addEventListener("click", () => menu?.classList.add("hidden"));
  });
</script>
